#parse('/templates/base/header.vm')

<script type="text/javascript">
    $(document).ready(function() {

    });
</script>

<div class="row">
    <div class="col-md-4">
        <div class="panel panel-default">
            <div class="panel-heading"><b>My Instances</b></div>
            <ul class="list-group">
                #foreach($instance in $instances)
                    <a href="/instance/$instance.id">
                        <li class="list-group-item">
                            $instance.name &nbsp; &nbsp; <span class="label $instance.instanceStatus.statusStyle">$instance.instanceStatus.status</span>
                        </li>
                    </a>
                #end
            </ul>
        </div>
    </div>
    <div class="col-md-8">
        <div class="row">
            <div class="col-sm-6 col-md-4">
                <div class="well">
                    <center><b>x</b> open tickets</center>
                </div>
            </div>

            <div class="col-sm-6 col-md-4">
                <div class="well">
                    <center><b>x</b> active instances</center>
                </div>
            </div>

            <div class="col-sm-6 col-md-4">
                <div class="well">
                    <center><b>x,xxx</b> players online</center>
                </div>
            </div>
        </div>
        <div class="panel panel-default">
            <div class="panel-heading"><b>Notifications</b></div>
            <div class="panel-body">
                You have no unread notifications.
            </div>
        </div>
    </div>

#include('/templates/base/footer.vm')